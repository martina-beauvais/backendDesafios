<h1>{{title}}</h1>
{{#if productos }}
    <div class="cart page">
        <ul class="list-group">
            {{#each productos }}
            <li class="list-group-item clearfix">
                <div class="col-xs-5">
                    <strong>{{ this.title }}</strong><br/>
                    <em>{{{this.description}}}</em>
                </div>
                <div class="col-xs-2 text-right">
                    <span class="badge">{{ this.quantity }}</span>
                </div>
                <div class="col-xs-3 text-right">
                    {{ this.price }}$
                </div>
                <div class="col-xs-2 text-right">
                    <a href="/remove/{{this._id}}" class="btn btn-default"></i> Eliminar</a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Total: {{ totalPrice }} $</strong>
    </div>
    <hr>
    <div class="text-right">
        <a href="#" type="button" class="btn btn-success">Checkout</a>
    </div>
{{ else }}
    El carro esta limpio
{{/if}}